<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground"> @drawable/fitness_maina_backdrop </item>
        <item name="android:fontFamily"> @font/lato_black </item>
    </style>
    
    <style name="main_activity_layout_text">
        
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart"> @dimen/_10sdp </item>
        <item name="android:textSize"> @dimen/_10sdp </item>
        <item name="android:textColor">@android:color/holo_orange_light </item>
        
    </style>

</resources>
