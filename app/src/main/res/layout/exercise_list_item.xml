<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="setData"
            type="com.example.starterproject.model.ExerciseList" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/exercise_list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/fitness_mania_drawer_icon"
            app:layout_constraintBottom_toTopOf="@id/exercise_list_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exercise_list_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{setData.exerciseName}"
            android:textColor="@android:color/white"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exercise_list_image"
            tools:text="@string/app_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>